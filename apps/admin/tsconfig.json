{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "jest.setup.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".turbo", "coverage"]
}
